@model List<SistemaCitasRemotas.Models.Dia>
@{
    ViewBag.Title = "Index";
}

<h2 class="card-header">

    <a href="~/Dia/AgregarEditar/" class="btn btn-info float-right">Nuevo Dia</a>
</h2>

@using (Html.BeginForm("Index", "Dia", FormMethod.Post, new { usuario = "frm-usuario" }))
{
    <div class="text-left">
        @Html.Label("Buscar:")
        @Html.TextBox("criterio")
        <button type="submit" class="btn btn-secondary">Buscar</button>
    </div>}


<br />
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Dia</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@(m.id)</td>
                <td>@(m.dia1)</td>
                
                <td style="align-content:center">
           
                    <a href="~/Dia/AgregarEditar/@m.id" class="btn btn-primary">Modificar</a>
                    <a href="~/Dia/Eliminar/@m.id" class="btn btn-danger" onclick="return confirm('¿Esta seguro de eliminar el registro?')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>