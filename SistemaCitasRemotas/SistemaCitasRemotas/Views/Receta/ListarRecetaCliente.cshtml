
@model List<SistemaCitasRemotas.Models.Receta>
@{
    ViewBag.Title = "Index";
}



@using (Html.BeginForm("Index", "Receta", FormMethod.Post, new { usuario = "frm-receta" }))
{
    <div class="text-left">
        @Html.Label("Buscar:")
        @Html.TextBox("criterio")
        <button type="submit" class="btn btn-secondary">Buscar</button>
    </div>}


<br />
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Usuario</th>
            <th>Medico</th>
            
            <th>Opcion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
        <tr>
            <td>@(m.id)</td>
            <td>@(m.Usuario.nombres)</td>
            <td>@(m.Medico.nombres)</td>
            <td>@(m.fecha)</td>
            <td style="align-content:center">
                <a href="~/Receta/VerDetalleRecetaCliente/@m.id" class="btn btn-primary">Ver Detalles</a>
            </td>
        </tr>
        }
    </tbody>
</table>