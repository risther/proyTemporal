@model List<SistemaCitasRemotas.Models.Usuario>
@{
    ViewBag.Title = "Index";
}

<h2 class="card-header">

    <a href="~/Usuario/AgregarEditar/" class="btn btn-info float-right">Nuevo Usuario</a>
</h2>

@using (Html.BeginForm("Index", "Usuario", FormMethod.Post, new { usuario = "frm-usuario" }))
{
    <div class="text-left">
        @Html.Label("Buscar:")
        @Html.TextBox("criterio")
        <button type="submit" class="btn btn-secondary">Buscar</button>
    </div>}


<br />
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>APELLIDO Y NOMBRES</th>
            <th>TIPO USUARIO</th>
            <th>ESTADO</th>
            <th>ACCION</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
        <tr>
            <td>@(m.id)</td>
            <td>@(m.nombres),@(m.apellidos)</td>
            <td>@(m.idTipoUsuario.Equals(1)? "Comun" : "Administrador" )</td>
            <td>@(m.estado.Equals("activo")?"ACTIVO" : "INACTIVO" )</td>
            <td style="align-content:center">
                <a href="~/Usuario/Visualizar/@m.id" class="btn btn-warning">Detalle</a>
                <a href="~/Usuario/AgregarEditar/@m.id" class="btn btn-primary">Modificar</a>
                <a href="~/Usuario/Eliminar/@m.id" class="btn btn-danger" onclick="return confirm('¿Esta seguro de eliminar el registro?')">Eliminar</a>
            </td>
        </tr>
        }
    </tbody>
</table>